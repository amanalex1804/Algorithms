#include<bits/stdc++.h>
using namespace std;
typedef long long int ll;

int main(){
	// ios_base::sync_with_stdio(false); cin.tie(NULL);
	int t;cin>>t;
	while(t--){
		ll n;cin>>n;
		ll p2=log2(n);
		ll k=pow(2,p2);   // for every power of two the answer will be the first person of the remainings
		ll diff=n-k;
		ll ans=(2*diff)+1; 
		cout<<ans;
	}
	
	
	return 0;
}
